# Staging Environment Configuration
ENVIRONMENT=staging

# Database Configuration
POSTGRES_DB=saas_cafeterias_staging
POSTGRES_USER=saasuser_staging
POSTGRES_PASSWORD=staging_password_change_me
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://saasuser_staging:staging_password_change_me@db:5432/saas_cafeterias_staging

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Security
SECRET_KEY=staging-secret-key-should-be-different-from-production-64-chars
JWT_SECRET_KEY=staging-jwt-secret-key-different-from-prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs (Sandbox/Test)
MERCADOPAGO_ACCESS_TOKEN=TEST-YOUR_STAGING_MERCADOPAGO_TOKEN
MERCADOPAGO_PUBLIC_KEY=TEST-YOUR_STAGING_MERCADOPAGO_PUBLIC_KEY
OPENAI_API_KEY=YOUR_STAGING_OPENAI_API_KEY

# CORS Configuration
ALLOWED_ORIGINS=https://staging.yourdomain.com,http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555
HTTP_PORT=80
HTTPS_PORT=443

# Frontend Configuration
VITE_API_URL=https://staging.yourdomain.com
VITE_ENVIRONMENT=staging

# Docker Compose
COMPOSE_PROJECT_NAME=saas_cafeterias_staging

# Logging
LOG_LEVEL=DEBUG

# Rate Limiting (More permissive for testing)
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=3600

# Flower Authentication
FLOWER_USERNAME=admin
FLOWER_PASSWORD=staging_flower_password

# Email Configuration (Test)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=staging@yourdomain.com
SMTP_PASSWORD=YOUR_STAGING_EMAIL_PASSWORD
EMAIL_FROM=staging@yourdomain.com

# Monitoring (Optional for staging)
SENTRY_DSN=YOUR_STAGING_SENTRY_DSN