# ===============================================
# CONFIGURACIÓN GENERAL
# ===============================================
PROJECT_NAME=SaaS Cafeterías
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# ===============================================
# CONFIGURACIÓN JWT
# ===============================================
# CRITICAL: Generate unique production secrets!
# Command: python -c "import secrets; print(secrets.token_urlsafe(64))"
# NEVER use default or example values in production!
SECRET_KEY=CHANGE_ME_CRITICAL_generate_unique_64_char_production_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===============================================
# BASE DE DATOS POSTGRESQL (PRODUCCIÓN)
# ===============================================
# CRITICAL: Use strong, unique production credentials!
# Generate password: openssl rand -base64 32
POSTGRES_USER=CHANGE_ME_prod_db_user
POSTGRES_PASSWORD=CHANGE_ME_CRITICAL_strong_password_min_24_chars
POSTGRES_HOST=your-production-database-host.com
POSTGRES_PORT=5432
POSTGRES_DB=saas_cafeterias_prod

# ===============================================
# REDIS
# ===============================================
# CRITICAL: Use password-protected Redis in production!
# Format: redis://:password@host:port/db
REDIS_HOST=your-production-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_CRITICAL_redis_password
REDIS_DB=0
REDIS_URL=redis://:CHANGE_PASSWORD@your-production-redis-host.com:6379/0

# ===============================================
# SEGURIDAD
# ===============================================
RATE_LIMIT_CALLS=1000
RATE_LIMIT_PERIOD=3600
ENABLE_HTTPS_REDIRECT=true
TRUSTED_PROXIES=127.0.0.1,::1

# ===============================================
# CORS
# ===============================================
# CRITICAL: Only allow your actual production domains!
# Never use wildcards (*) in production!
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# ===============================================
# APIs EXTERNAS
# ===============================================
# OpenAI: Get production key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-CHANGE_ME_CRITICAL_production_openai_key
# MercadoPago: Get PRODUCTION credentials (not TEST) from dashboard
MERCADOPAGO_ACCESS_TOKEN=APP_USR_CHANGE_ME_production_access_token
MERCADOPAGO_PUBLIC_KEY=APP_USR_CHANGE_ME_production_public_key

# ===============================================
# LOGGING
# ===============================================
LOG_LEVEL=WARNING

# ===============================================
# ARCHIVOS
# ===============================================
MAX_FILE_SIZE_MB=10
UPLOAD_FOLDER=uploads