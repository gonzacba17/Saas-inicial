# SaaS Cafeterías - Staging Environment Configuration Template
# ⚠️  IMPORTANTE: Copie este archivo a .env.staging y configure con valores reales
# Este archivo es seguro para el repositorio - NO contiene secretos reales

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL for staging - CONFIGURAR CON VALORES REALES
DATABASE_URL=postgresql://STAGING_USER:STAGING_PASSWORD@staging-db:5432/saas_cafeterias_staging

# ==============================================
# SECURITY (GENERAR CLAVES ÚNICAS PARA STAGING)
# ==============================================
SECRET_KEY=GENERATE_UNIQUE_SECRET_KEY_64_CHARS_MINIMUM
JWT_SECRET_KEY=GENERATE_UNIQUE_JWT_SECRET_KEY_DIFFERENT_FROM_PROD
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# API CONFIGURATION
# ==============================================
API_V1_STR=/api/v1
PROJECT_NAME=SaaS Cafeterías (Staging)
VERSION=1.0.0

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://staging-redis:6379/0
REDIS_PORT=6379
REDIS_HOST=staging-redis
REDIS_PASSWORD=REDIS_PASSWORD_HERE

# ==============================================
# CELERY CONFIGURATION
# ==============================================
CELERY_BROKER_URL=redis://staging-redis:6379/1
CELERY_RESULT_BACKEND=redis://staging-redis:6379/2

# ==============================================
# EXTERNAL APIS (CONFIGURAR CON TOKENS REALES)
# ==============================================
# MercadoPago Configuration (Sandbox)
MERCADOPAGO_ACCESS_TOKEN=TEST-SANDBOX_ACCESS_TOKEN_HERE
MERCADOPAGO_PUBLIC_KEY=TEST-SANDBOX_PUBLIC_KEY_HERE
MERCADOPAGO_SANDBOX=true

# OpenAI Configuration
OPENAI_API_KEY=sk-OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=https://staging.YOURDOMAIN.com,https://staging-admin.YOURDOMAIN.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==============================================
# SECRETS MANAGEMENT
# ==============================================
SECRETS_BACKEND=vault
SECRETS_DIR=secrets

# HashiCorp Vault (configurar con URLs reales)
VAULT_URL=https://staging-vault.YOURDOMAIN.com:8200
VAULT_TOKEN=VAULT_TOKEN_HERE
VAULT_MOUNT_POINT=secret

# AWS Secrets Manager
AWS_REGION=us-east-1
AWS_PROFILE=staging

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=staging-noreply@YOURDOMAIN.com
SMTP_PASSWORD=EMAIL_APP_PASSWORD_HERE
EMAIL_FROM=staging-noreply@YOURDOMAIN.com

# ==============================================
# MONITORING AND LOGGING
# ==============================================
SENTRY_DSN=SENTRY_DSN_FOR_ERROR_TRACKING
GRAFANA_USER=staging_admin
GRAFANA_PASSWORD=GRAFANA_PASSWORD_HERE

# ==============================================
# STAGING SPECIFIC SETTINGS
# ==============================================
SQL_ECHO=false
AUTO_RELOAD=false
ENABLE_DETAILED_LOGGING=true
DATA_RETENTION_DAYS=30