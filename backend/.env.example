# SaaS Cafeterías - Environment Variables Template
# Copy this file to .env and configure with your actual values

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL (recommended for production)
# SECURITY: Replace 'user' and 'password' with actual credentials
DATABASE_URL=postgresql://CHANGE_USER:CHANGE_PASSWORD@localhost:5432/saas_cafeterias
# SQLite (for development/testing only - NOT for production)
# DATABASE_URL=sqlite:///./saas_cafeterias.db

# ==============================================
# SECURITY
# ==============================================
# CRITICAL: Never commit actual secrets to Git!
# Generate unique secrets with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_generate_unique_64_char_secret_key_here
JWT_SECRET_KEY=CHANGE_ME_generate_different_64_char_jwt_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# API CONFIGURATION
# ==============================================
API_V1_STR=/api/v1
PROJECT_NAME=SaaS Cafeterías
VERSION=1.0.0

# ==============================================
# REDIS CONFIGURATION (optional)
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379
REDIS_HOST=localhost
REDIS_PASSWORD=

# ==============================================
# CELERY CONFIGURATION (optional)
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==============================================
# EXTERNAL APIS
# ==============================================
# MercadoPago Configuration
# Get credentials from: https://www.mercadopago.com/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=TEST-CHANGE_ME_get_from_mercadopago_dashboard
MERCADOPAGO_PUBLIC_KEY=TEST-CHANGE_ME_get_from_mercadopago_dashboard
MERCADOPAGO_SANDBOX=true

# OpenAI Configuration
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-CHANGE_ME_get_from_openai_platform
OPENAI_MODEL=gpt-3.5-turbo

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==============================================
# SECRETS MANAGEMENT
# ==============================================
SECRETS_BACKEND=environment
SECRETS_DIR=secrets

# HashiCorp Vault (optional)
# SECURITY: Never commit production Vault tokens!
VAULT_URL=http://localhost:8200
VAULT_TOKEN=CHANGE_ME_dev_token_only_never_production
VAULT_MOUNT_POINT=secret

# AWS Secrets Manager (optional)
AWS_REGION=us-east-1
AWS_PROFILE=default

# ==============================================
# EMAIL CONFIGURATION (optional)
# ==============================================
# For Gmail: Generate App Password at https://myaccount.google.com/apppasswords
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=CHANGE_ME_your_email@gmail.com
SMTP_PASSWORD=CHANGE_ME_16_char_gmail_app_password
EMAIL_FROM=noreply@yourdomain.com

# ==============================================
# MONITORING AND LOGGING (optional)
# ==============================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to true to enable SQL query logging
SQL_ECHO=false
# Set to true to enable auto-reload in development
AUTO_RELOAD=true