# SaaS Cafeterías - Environment Variables Template
# Copy this file to .env and configure with your actual values

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/saas_cafeterias
# SQLite (for development/testing only)
# DATABASE_URL=sqlite:///./saas_cafeterias.db

# ==============================================
# SECURITY
# ==============================================
SECRET_KEY=your-super-secret-key-64-characters-minimum-for-production-change-this
JWT_SECRET_KEY=your-jwt-secret-key-different-from-main-secret-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# API CONFIGURATION
# ==============================================
API_V1_STR=/api/v1
PROJECT_NAME=SaaS Cafeterías
VERSION=1.0.0

# ==============================================
# REDIS CONFIGURATION (optional)
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379
REDIS_HOST=localhost
REDIS_PASSWORD=

# ==============================================
# CELERY CONFIGURATION (optional)
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==============================================
# EXTERNAL APIS
# ==============================================
# MercadoPago Configuration
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADOPAGO_SANDBOX=true

# OpenAI Configuration  
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==============================================
# SECRETS MANAGEMENT
# ==============================================
SECRETS_BACKEND=environment
SECRETS_DIR=secrets

# HashiCorp Vault (optional)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_MOUNT_POINT=secret

# AWS Secrets Manager (optional)
AWS_REGION=us-east-1
AWS_PROFILE=default

# ==============================================
# EMAIL CONFIGURATION (optional)
# ==============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ==============================================
# MONITORING AND LOGGING (optional)
# ==============================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to true to enable SQL query logging
SQL_ECHO=false
# Set to true to enable auto-reload in development
AUTO_RELOAD=true