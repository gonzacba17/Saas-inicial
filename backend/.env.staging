# SaaS Cafeterías - Staging Environment Configuration
# Environment configuration for staging/testing

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL for staging
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/saas_cafeterias_staging

# ==============================================
# SECURITY (Use different keys for staging)
# ==============================================
SECRET_KEY=staging-super-secret-key-64-characters-minimum-different-from-production
JWT_SECRET_KEY=staging-jwt-secret-key-different-from-production-and-development
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# API CONFIGURATION
# ==============================================
API_V1_STR=/api/v1
PROJECT_NAME=SaaS Cafeterías (Staging)
VERSION=1.0.0

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://staging-redis:6379/0
REDIS_PORT=6379
REDIS_HOST=staging-redis
REDIS_PASSWORD=staging-redis-password

# ==============================================
# CELERY CONFIGURATION
# ==============================================
CELERY_BROKER_URL=redis://staging-redis:6379/1
CELERY_RESULT_BACKEND=redis://staging-redis:6379/2

# ==============================================
# EXTERNAL APIS (Use sandbox/test versions)
# ==============================================
# MercadoPago Configuration (Sandbox)
MERCADOPAGO_ACCESS_TOKEN=staging-mercadopago-sandbox-token
MERCADOPAGO_PUBLIC_KEY=staging-mercadopago-sandbox-public-key
MERCADOPAGO_SANDBOX=true

# OpenAI Configuration (limited usage)
OPENAI_API_KEY=staging-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-admin.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==============================================
# SECRETS MANAGEMENT
# ==============================================
SECRETS_BACKEND=vault
SECRETS_DIR=secrets

# HashiCorp Vault (staging)
VAULT_URL=https://staging-vault.yourdomain.com:8200
VAULT_TOKEN=staging-vault-token
VAULT_MOUNT_POINT=secret

# AWS Secrets Manager (staging)
AWS_REGION=us-east-1
AWS_PROFILE=staging

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=staging-noreply@yourdomain.com
SMTP_PASSWORD=staging-email-app-password
EMAIL_FROM=staging-noreply@yourdomain.com

# ==============================================
# MONITORING AND LOGGING
# ==============================================
SENTRY_DSN=staging-sentry-dsn-for-error-tracking
GRAFANA_USER=staging_admin
GRAFANA_PASSWORD=staging-grafana-password

# ==============================================
# STAGING SPECIFIC SETTINGS
# ==============================================
# Disable SQL query logging in staging
SQL_ECHO=false
# Disable auto-reload in staging
AUTO_RELOAD=false
# Enable more verbose logging for debugging
ENABLE_DETAILED_LOGGING=true
# Data retention for staging (shorter than production)
DATA_RETENTION_DAYS=30