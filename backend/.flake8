[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    alembic/versions,
    migrations
select = E9,F63,F7,F82
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401   # imported but unused (can be useful for __init__.py)
per-file-ignores =
    __init__.py:F401