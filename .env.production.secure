# ==============================================
# SAAS CAFETERIAS - PRODUCTION CONFIGURATION
# ==============================================
# CRITICAL: Use strong, unique values for production
# Never use default values in production environment

# ==============================================
# ENVIRONMENT
# ==============================================
ENVIRONMENT=production
DEBUG=false
TESTING=false

# ==============================================
# SECURITY KEYS (GENERATE UNIQUE VALUES)
# ==============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_STRONG_RANDOM_VALUE_64_CHARACTERS_MIN

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MERCADOPAGO_WEBHOOK_SECRET=CHANGE_THIS_TO_STRONG_WEBHOOK_SECRET_32_CHARS_MIN

# Generate with: python -c "import base64, secrets; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_TO_BASE64_ENCODED_32_BYTE_KEY

# ==============================================
# DATABASE - POSTGRESQL (PRODUCTION)
# ==============================================
USE_SQLITE=false
POSTGRES_USER=CHANGE_DB_USERNAME
POSTGRES_PASSWORD=CHANGE_TO_STRONG_DB_PASSWORD_MIN_16_CHARS
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=saas_cafeterias_prod

# Alternative: Use complete DATABASE_URL
# DATABASE_URL=postgresql://username:password@host:port/database?client_encoding=utf8

# ==============================================
# REDIS (PRODUCTION)
# ==============================================
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_TO_REDIS_PASSWORD
REDIS_URL=redis://:password@your-redis-host.com:6379/0

# ==============================================
# EXTERNAL APIS (REQUIRED)
# ==============================================
# MercadoPago Production Keys
MERCADOPAGO_ACCESS_TOKEN=APP_USR_YOUR_PRODUCTION_ACCESS_TOKEN
MERCADOPAGO_PUBLIC_KEY=APP_USR_YOUR_PRODUCTION_PUBLIC_KEY

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
PROJECT_NAME=SaaS Cafeter√≠as
VERSION=1.0.0
API_V1_STR=/api/v1

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_FOLDER=uploads

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO

# ==============================================
# CELERY (BACKGROUND TASKS)
# ==============================================
CELERY_BROKER_URL=redis://:password@your-redis-host.com:6379/1
CELERY_RESULT_BACKEND=redis://:password@your-redis-host.com:6379/2

# ==============================================
# MONITORING (OPTIONAL)
# ==============================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ==============================================
# DEPLOYMENT
# ==============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555
HTTP_PORT=80
HTTPS_PORT=443