# SaaS Cafeterías - Frontend Environment Variables Template
# Copy this file to .env and configure with your actual values

# ==============================================
# API CONFIGURATION
# ==============================================
# Backend API URL
VITE_API_URL=http://localhost:8000

# API Version
VITE_API_VERSION=v1

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Application name
VITE_APP_NAME=SaaS Cafeterías

# Application version
VITE_APP_VERSION=1.0.0

# Environment
VITE_ENVIRONMENT=development

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# MercadoPago Public Key (for frontend payment integration)
VITE_MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry for error tracking (optional)
VITE_SENTRY_DSN=your-frontend-sentry-dsn

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Enable development tools
VITE_DEV_TOOLS=true

# Enable console logging
VITE_ENABLE_LOGGING=true

# Hot Module Replacement
VITE_HMR=true

# ==============================================
# FEATURE FLAGS (optional)
# ==============================================
# Enable beta features
VITE_ENABLE_BETA_FEATURES=false

# Enable experimental AI chat
VITE_ENABLE_AI_CHAT=true

# Enable analytics dashboard
VITE_ENABLE_ANALYTICS=true

# ==============================================
# THEMING (optional)
# ==============================================
# Default theme
VITE_DEFAULT_THEME=light

# Brand colors (hex codes)
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#10B981